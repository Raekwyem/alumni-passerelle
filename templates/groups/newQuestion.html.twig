{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <h1>Créer un post</h1>

    <form action="" method="post">
{#        <div class="row">#}
{#            <div class="col-12">#}
{#                <div class="form-group">#}
{#                    <label for="title">Titre : <span class="require">*</span></label>#}
{#                    <input type="text" class="form-control" name="title" required />#}
{#                </div>#}
{#            </div>#}
{#        </div>#}
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="description">Votre question : </label>
                    <textarea rows="5" class="form-control" name="description" required></textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <p><span class="require">*</span> - champs obligatoire</p>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="tags-list">
                    <span class="badge badge-pill badge-primary" id="tag-animation">Animation
                        <a href="#remove-tag"><span aria-hidden="true" data-dismiss="tag-animation">&times;</span></a>
                    </span>
                    <span class="badge badge-pill badge-primary">JavaScript
                        <a href="#remove-tag"><span aria-hidden="true" data-dismiss="tag-animation">&times;</span></a>
                    </span>
                    <span class="badge badge-pill badge-primary">Coding
                        <a href="#remove-tag"><span aria-hidden="true" data-dismiss="tag-animation">&times;</span></a>
                    </span>
                </div>
            </div>
            <div class="col-12 py-4">
                <input type="text" placeholder="Ajoutez des mots-clés" class="form-control"  value="" data-role="tags-input" />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-block btn-primary">
                    Poster
                </button>
            </div>
            <div class="col-6">
                <a href="post.html" class="btn btn-block btn-secondary">
                    Annuler
                </a>
            </div>
        </div>
    </form>

{% endblock %}